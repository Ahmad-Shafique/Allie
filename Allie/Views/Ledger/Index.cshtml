@model IEnumerable<AllieEntity.Ledger>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>/Ledgers</title>
</head>
<body>
    <div align="center">
        <h2>All generated ledgers</h2>

        <table class="table">
            @using AllieEntity
            @foreach (Ledger item in Model)
            {
                string month = System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.MonthNames[item.LedgerPeriod.Month - 1];
                <tr>
                    <td align="left">
                        Ledger Period:  &nbsp; @month @item.LedgerPeriod.Year<br />
                        Ledger Description:  &nbsp; @item.LedgerDescription<br />
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("See Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
                <tr><td colspan="2"><hr /></td></tr>
            }
        </table>
        <a href="/Ledger/Create">Generate new Ledger</a>
        <a href="/Company/Index">Company Dashboard</a>
    </div>
</body>
</html>
