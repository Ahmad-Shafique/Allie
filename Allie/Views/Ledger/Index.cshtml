@model IEnumerable<AllieEntity.Ledger>
@{
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

@section title{Index}

<div align="center" class="container">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="panel panel-info">
                    <div class="panel-heading" style="background-color:black; color:ghostwhite">
                        <h2 class="h2">All generated ledgers</h2>
                    </div>
                    <div align="center" class="panel-body">
                        <h2>All generated ledgers</h2>

                        <table class="table table-striped">
                            @using AllieEntity
                            @foreach (Ledger item in Model)
            {
                string month = System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.MonthNames[item.LedgerPeriod.Month - 1];
                                <tr>
                                    <td align="left">
                                        Ledger Period:  &nbsp; @month @item.LedgerPeriod.Year<br />
                                        Ledger Description:  &nbsp; @item.LedgerDescription<br />
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("See Details", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                    </td>
                                </tr>
                                <tr><td colspan="2"><hr /></td></tr>
                            }
                        </table>
                        <a href="/Ledger/Create"><i class="glyphicon glyphicon-plus-sign"></i>Generate new Ledger</a>
                        <a href="/Company/Index"><i class="glyphicon glyphicon-dashboard"></i>Company Dashboard</a>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

                    
