@model AllieEntity.Ledger

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div align="center">
            @ViewBag.error
            <table>
                <tr>
                    <td>Ledger Description</td>
                    <td><textarea cols="50" rows="2" name="LedgerDescription">@Model.LedgerDescription</textarea></td>
                </tr>
                <tr>
                    <td colspan="2" align="center"><input type="submit" value="Save changes" /></td>
                </tr>
            </table><br />
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</body>
</html>
