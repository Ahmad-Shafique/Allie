@model IEnumerable<AllieEntity.User>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AssignOwner</title>
</head>
<body>
    <label hidden>@ViewBag.AssignOwner</label>
    <div> 
        <table align="center">
            <tr bgcolor="#00FF00">

                <th>User Name</th>
                <th>Options</th>
            </tr>
            <tbody id="DataSearching">
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => user.UserName)</td>

                        <td>
                            @Html.ActionLink("Assign", "AssignOwner", new { VoucherId = ViewBag.AssignOwner,OwnerId = user.UserId })
                            <a href="/User/Edit/@user.UserId"><i class="glyphicon glyphicon-edit"></i></a>

                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</body>
</html>
