@model IEnumerable<AllieEntity.Journal>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Journals</title>
</head>
<body>
    <div align="center">
        <h2>All generated journals</h2>

        <table class="table">
            @using AllieEntity
            @foreach(Journal item in Model)
            {
                string month = System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.MonthNames[item.JournalPeriod.Month - 1];
                <tr>
                    <td align="left">
                        Journal Period:  &nbsp; @month @item.JournalPeriod.Year<br />
                        Journal Description:  &nbsp; @item.JournalDescription<br />
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("See Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
                <tr><td colspan="2"><hr /></td></tr>
            }
        </table>
        <a href="/Journal/Create">Generate new journal</a>
        <a href="/Company/Index">Company Dashboard</a>
    </div>
</body>
</html>
