@model IEnumerable<AllieEntity.Journal>

@{
    Layout = "~/Views/Shared/MainLayout.cshtml";
}
@section title{Journals}

<div align="center" class="container">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="panel panel-info">
                    <div class="panel-heading" style="background-color:black; color:ghostwhite">
                        <h2 class="h2">All generated journals</h2>
                    </div>
                    <div class="panel-body">
                        <table class="table table-striped" width="0%">
                            @using AllieEntity
                            @foreach (Journal item in Model)
                            {
                                string month = System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.MonthNames[item.JournalPeriod.Month - 1];
                                <tr>
                                    <td align="left">
                                        Journal Period:  &nbsp; @month @item.JournalPeriod.Year<br />
                                        Journal Description:  &nbsp; @item.JournalDescription<br />
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("See Details", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                    </td>
                                </tr>
                                <tr><td colspan="2"><hr /></td></tr>
                            }
                        </table>
                        <a href="/Journal/Create" class="pull-right"><i class="glyphicon glyphicon-plus-sign"></i>Generate new journal</a>
                        <a href="/Company/Index" class="pull-left"><i class="glyphicon glyphicon-dashboard"></i>Company Dashboard</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
