
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create Income Statement</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        string[] months = System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.MonthNames;
        
        <div align="center">
            <table>
                <tr>
                    <td>
                        Start Month &nbsp; 
                        <select name="StartMonth">
                            @for(int i=0; i<12; i++)
                            {
                                <option value="@(i+1)">@months[i]</option>
                            }
                        </select>
                    </td>
                    <td>
                        of year &nbsp; 
                        <select name="StartYear">
                            @for (int i = 2015; i <= 2020; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>
                        End Month &nbsp; 
                        <select name="EndMonth">
                            @for (int i = 0; i < 12; i++)
                            {
                                <option value="@(i+1)">@months[i]</option>
                            }
                        </select>
                    </td>
                    <td>
                        of Year &nbsp; 
                        <select name="EndYear">
                            @for (int i = 2015; i <= 2020; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" align="center"><input type="submit" value="Create" /></td>
                </tr>
            </table>
        </div>
    }
</body>
</html>
