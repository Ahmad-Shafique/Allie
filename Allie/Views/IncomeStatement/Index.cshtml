@model IEnumerable<AllieEntity.IncomeStatement>
@{
    Layout = "~/Views/Shared/MainLayout.cshtml";
}
@section title{Index}

<div align="center" class="container">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="panel panel-info">
                    <div class="panel-heading" style="background-color:black; color:ghostwhite">
                        <h2 class="h2">All generated journals</h2>
                    </div>
                    <div class="panel-body">
                        <h2>Recorded Income Statements</h2>
                        <table class="table table-striped"align="center">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Start)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.End)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Total)
                                </th>
                                <th>Actions</th>
                            </tr>

                            @foreach (var item in Model)
            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Start)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.End)
                                    </td>
                                    <td>
                                        @{
                                            if (item.Total > 0)
                                            {
                                                <label style="color: green">@item.Total (Profit)</label>
                                            }
                                            else
                                            {
                                                <label style="color: red">@item.Total (Loss)</label>
                                            }
                                        }
                                    </td>
                                    <td>
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                    </td>
                                </tr>
                                            }

                        </table>
                        @Html.ActionLink("To Dashboard", "Index", "Company")
                        @Html.ActionLink("Generate new income statement", "Create")
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>