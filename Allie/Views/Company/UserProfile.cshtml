@model AllieEntity.User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Profile</title>
</head>
<body>
    <div>
        <h4>User</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.UserName)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Address)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Address)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.Phone)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Phone)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                Company Name
            </dt>
    
            <dd>
                @using AllieService
                @{ 
                    string name = ServiceFactory.GetCompanyServices().Get(Model.CompanyId).CompanyName;
                }
                @name
            </dd>
    
        </dl>
    </div>
    <p>
        @Html.ActionLink("Change Password", "ChangePassword", new { id = Model.UserId })
        @Html.ActionLink("Edit", "EditProfile", new { id = Model.UserId })
        @Html.ActionLink("Back", "Index")
    </p>
</body>
</html>
