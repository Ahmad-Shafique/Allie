@model AllieEntity.Account

@{
    Layout = "~/Views/Shared/MainLayout.cshtml";
}
@section title{delete}
<div class="container-fluid" align="center">
    <h3 class="h3">Are you sure you want to delete this?</h3>
    <div align="center">
        <h4>Account</h4>
        <hr />
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.AccountNumber)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AccountNumber)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.AccountDescription)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AccountDescription)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Amount)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Amount)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.AccountType)
            </dt>

            <dd>
                @using AllieService
                @{
                    string type = ServiceFactory.GetAccountTypeServices().Get(Model.AccountType).Type;
                }
                @type
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color" align="center">
                <input type="submit" value="Delete" class="btn btn-success" /> |
                @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class="btn btn-success"})
            </div>
        }
    </div>
</div>