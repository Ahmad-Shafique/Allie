<!DOCTYPE html>
<html>
<head>
    <title>@RenderSection("title", false)</title>
    <meta name="viewport" content="width=device-width" />

    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script>
        $(document).ready(function () {
            // get current URL path and assign 'active' class
            var pathname = window.location.pathname;
            $('.nav').removeClass('active');
            $('.nav > li > a[href="' + pathname + '"]').parent().addClass('active');
        })
    </script>
    @RenderSection("scripts", false)

    <link href="~/Contents/bootstrap.css" rel="stylesheet" />
    @RenderSection("styles", false)
</head>
<body>

    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Allie</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="nav item active" id="index"><a href="/Company/Index">Home</a></li>
                <li class="nav item"><a href="/Account/Index" id="accounts">Accounts</a></li>
                <li class="nav item"><a href="/Transaction/Index" id="transactions">Transactions</a></li>
                <li class="nav item"><a href="/Journal/Index"id="journals">Journals</a></li>
                <li class="nav item"><a href="/Ledger/Index"id="ledgers">Ledgers</a> </li>
                <li class="nav item"><a href="/IncomeStatement/Index" id="income">Income Statements</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="glyphicon glyphicon-user"></i> @Session["UserName"]
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="/Company/UserProfile"><i class="glyphicon glyphicon-user"></i> My Profile</a></li>
                        <li><a href="/Company/Details"><i class="glyphicon glyphicon-file"></i>Company Details</a></li>
                        <li role="separator" class="divider"></li>
                        <li><a href="/Login/Logout"><i class="glyphicon glyphicon-log-out"></i> Logout</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>

    <br />

    @RenderBody()

</body>
</html>