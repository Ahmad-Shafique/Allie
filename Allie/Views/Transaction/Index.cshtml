@model IEnumerable<AllieEntity.Transaction>
@{
    Layout = "~/Views/Shared/MainLayout.cshtml";
}
@section title{Index}

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading" style="background-color:black; color:ghostwhite">
                    <h2 class="h2">Company Transactions</h2>
                </div>
                <div align="center" class="panel-body">
                    <table class="table table-striped">
                        @using AllieEntity
                        @foreach (Transaction item in Model)
                        {
                            <tr>
                                <td align="left">
                                    Transaction Date:  &nbsp; @item.TransactionDate.ToShortDateString()<br />
                                    Transaction Description:  &nbsp; @item.TransactionDescription<br />
                                    Transaction Amount:  &nbsp; @item.TransactionAmount
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("See Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                            <tr><td colspan="2"><hr /></td></tr>
                        }
                    </table>
                    <a href="/Transaction/Create" class="pull-right"><i class="glyphicon glyphicon-plus"></i> Begin new Transaction</a>
                    <a href="/Company/Index" class="pull-left"><i class="glyphicon glyphicon-dashboard"></i>Company Dashboard</a>
                </div>
            </div>
        </div>
    </div>
</div>

                
