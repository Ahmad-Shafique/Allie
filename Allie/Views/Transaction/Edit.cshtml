@model AllieEntity.Transaction

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>Edit Transaction</h4>
            <hr />
            @ViewBag.Error
    
            <div class="form-group">
                Transaction Description
                <div class="col-md-10">
                    <textarea cols="50" rows="2" name="TransactionDescription">@Model.TransactionDescription</textarea>
                </div>
            </div>
    
            <div class="form-group">
                Transaction Date
                <div class="col-md-10">
                    <input type="date" name="TransactionDate" value="@Model.TransactionDate.ToString("yyyy-MM-dd")" />
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
