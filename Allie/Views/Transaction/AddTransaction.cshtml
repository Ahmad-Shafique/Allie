
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <script src="~/Scripts/jquery-3.1.1.intellisense.js"></script>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/TransactionCreateScripts.js"></script>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <div align="center">
        <h2>Emter Transaction Details</h2><hr />
        @using AllieEntity
        <div id="transactionDetailDiv">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                
                <table>
                    @{
                        Transaction transaction = (Transaction)ViewBag.Transaction;
                    }
                    <tr>
                        <td>Transaction Date</td>
                        <td><label>@transaction.TransactionDate.ToShortDateString()</label></td>
                    </tr>
                    <tr>
                        <td>Transaction Description</td>
                        <td><label>@transaction.TransactionDescription</label></td>
                    </tr>
                </table>
                <table width="40%">
                    <tr>
                        @*left part*@
                        <td>
                            Source Account<hr />
                            Select Account<br />
                            @Html.DropDownList("SourceAcc_Account", (List<SelectListItem>)ViewBag.SelectList)
                            <br />

                            Amount<br />
                            <input type="number" name="SourceAcc_Amount" id="SourceAcc_Amount" min="1" value="" /><br />

                            Transaction <br />
                            <input type="text" name="SourceAcc_TransactionType" id="SourceAcc_TransactionType" value="" readonly />
                        </td>
                        @*right part*@
                        <td>
                            Destination Account<hr />
                            Select Account<br />
                            @Html.DropDownList("DestAcc_Account", (List<SelectListItem>)ViewBag.SelectList)
                            <br />

                            Amount<br />
                            <input type="number" name="DestAcc_Amount" id="DestAcc_Amount" min="1" value="" readonly /><br />

                            Transaction <br />
                            <input type="text" name="DestAcc_TransactionType" id="DestAcc_TransactionType" value="" readonly />
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" align="center">
                            <input type="hidden" name="TransactionId" value="@transaction.Id" />
                            <input type="submit" id="submit" value="Confirm Transaction" disabled="" />
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" align="center"><p id="okay">Please select 2  accounts of different transaction type</p></td>
                    </tr>
                </table>

            }
            <a href="/Company/Index">To Dasboard</a>
        </div>
    </div>
</body>
</html>
